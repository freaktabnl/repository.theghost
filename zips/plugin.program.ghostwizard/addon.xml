<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.program.ghostwizard" name="[COLOR orange]Ghost[/COLOR] Wizard" version="3.0.1" provider-name="The Ghost, drinfernoo, slamious">
    <requires>
        <import addon="xbmc.python" version="3.0.0" />
        <import addon="script.module.requests" />
        <import addon="script.module.six" />
        <import addon="script.kodi.android.update" optional="true" version="1.1.7" />
        <import addon="script.speedtester" optional="true" version="1.1.2" />
    </requires>
    
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
    </extension>
    
    <extension point="xbmc.service" library="startup.py" start="startup" />
    
    <extension point="xbmc.addon.metadata">
		<summary lang="en_GB">Ghost Wizard is een addon om builds te installeren op Kodi 19 Matrix en onderhoud op uw systeem uit te voeren.</summary>
		<description lang="en_GB">Ghost Wizard is een addon om builds te installeren op Kodi 19 Matrix en onderhoud op uw systeem uit te voeren.</description>
	<disclaimer lang="en_GB">Deze addon bevat geen content en maakt op geen enkele wijze deel uit van Kodi zelf.</disclaimer>
        <platform>all</platform>
        <reuselanguageinvoker>false</reuselanguageinvoker>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.png</fanart>
        </assets>
    </extension>
</addon>

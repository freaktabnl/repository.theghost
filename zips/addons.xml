<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.program.ghostcleaner" name="[COLOR orange]Ghost[/COLOR] Cleaner" version="1.0.0" provider-name="The Ghost">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
  </requires>
  <extension library="clean.py" point="xbmc.python.pluginsource">
        <provides>executable</provides>
  </extension>
  <extension library="starter.py" point="xbmc.service" start="startup">
        <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en_GB">Tool om uw Kodi 19 Matrix systeem schoon te houden</summary>
    <description>Tool om uw Kodi 19 Matrix systeem schoon te houden</description>
	<disclaimer lang="en_GB">Deze addon bevat geen illegale content en maakt op geen enkele wijze deel uit van Kodi zelf.</disclaimer>
    <assets>
    <icon>icon.png</icon>
    <fanart>fanart.jpg</fanart>
    </assets>
  </extension>
</addon>

<addon id="plugin.program.ghostopenwizard" name="[COLOR orange]Ghost[/COLOR] Open Wizard" version="1.0.0" provider-name="The Ghost">
    <requires>
        <import addon="xbmc.python" version="3.0.0" />
        <import addon="script.module.requests" />
        <import addon="script.module.six" />
        <import addon="script.kodi.android.update" optional="true" version="1.1.7" />
    </requires>

    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
    </extension>

    <extension point="xbmc.service" library="startup.py" start="startup" />

    <extension point="xbmc.addon.metadata">
        <summary lang="en">[COLOR orange]Ghost[/COLOR] Open Wizard Matrix</summary>
        <description lang="en">[COLOR orange]Ghost[/COLOR] Open Wizard Kodi 19 Matrix bevat enkele onderhouds tools, onthoud inlog gegevens en instellingen en installeert uw eigen builds of die van andere. Dank aan Drinfernoo voor zijn kennis en bijdrage.</description>
				<disclaimer lang="en_GB">Deze addon bevat geen illegale inhoud waar copyright op rust en is dus veilig om te installeren en maakt geen deel uit van Kodi.Dank aan Drinfernoo voor zijn kennis en bijdrages</disclaimer>
        <platform>all</platform>
        <reuselanguageinvoker>false</reuselanguageinvoker>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.png</fanart>
        </assets>
    </extension>
</addon>


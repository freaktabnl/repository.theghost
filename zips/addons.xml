            <info compressed="false">https://raw.githubusercontent.com/freaktabnl/repository.theghost/master/zips/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/freaktabnl/repository.theghost/master/zips/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/freaktabnl/repository.theghost/master/zips/</datadir>
        </dir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Repository The Ghost</summary>
        <description>Repository The Ghost</description>
        <disclaimer>Deze repository maakt geen deel uit van uw Kodi systeem.</disclaimer>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>
</addons>

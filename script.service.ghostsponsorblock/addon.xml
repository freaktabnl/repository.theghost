<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.service.ghostsponsorblock" version="1.0.0" name="Ghost Sponsor Block" provider-name="The Ghost,siku2">
    <requires>
        <import addon="script.module.requests" version="2.15.1"/>
        <import addon="script.module.six" version="1.13.0"/>
        <import addon="plugin.video.youtube" version="6.7.0"/>
    </requires>

    <extension point="xbmc.service" library="service.py"/>

    <extension point="kodi.context.item">
        <menu id="kodi.core.main">
            <item library="context.py">
                <label>32027</label>
                <visible>String.IsEqual(ListItem.Property(Addon.ID),plugin.video.youtube)</visible>
            </item>
        </menu>
    </extension>

    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Script om YouTube reclames te weren en geschikt voor Kodi 19 Matrix.</summary>
        <description lang="en_GB">Dit script zorgt ervoor dat binnen YouTube videos de reclame eruit wordt gefilterd.</description>
        <disclaimer lang="en_GB">Deze addon bevat geen illegale content en maakt op geen enkele wijze deel uit van Kodi zelf.</disclaimer>
        </description>

        <platform>all</platform>
        <license>MIT</license>
        <assets>
            <icon>resources/images/icon.png</icon>
            <fanart>resources/images/fanart.jpg</fanart>
        </assets>
    </extension>
</addon>
